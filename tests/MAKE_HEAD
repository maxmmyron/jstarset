.ONESHELL:

BJAR := ../../build.jar
TJAR := ../../tests.jar

define test_returns_nil
  OUT=$$(java -cp $(BJAR):$(TJAR) $(1))

  if [$(OUT) = ""] ; then
    echo "$(1) [PASSED]"
  else
    echo "$(1) [FAILED]"
  fi
endef

define test_return_expected
 OUT=$$(java -cp $(BJAR):$(TJAR) $(1))

 if [$(OUT) = $(2)] ; then
    echo "$(1) [PASSED]"
  else
    echo "$(1) [FAILED]"
  fi
endef